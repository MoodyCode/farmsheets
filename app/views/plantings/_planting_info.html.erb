<legend><%= @planting.crop.name.titleize %></legend>
<dl>
  <dt>Varietal</dt> 
  <dd><%= @planting.varietal.name.titleize %></dd>
</dl>
<dl>
  <dt>Date Planted</dt>
  <dd><%= @planting.date.strftime("%B %e, %Y") %></dd>
</dl>
<dl>
  <dt>Planting Size</dt>
  <dd><%= @planting.plot.name.titleize %></dd>
</dl>
<dl>
  <dt>Seed Quantity</dt>
  <dd><%= @planting.quantity %> <%= @planting.measurement.unit %></dd>
</dl>
<dl>
  <dt>Planting Notes</dt>
  <dd><%= @planting.notes %></dd>
</dl>
