<%= form_for @planting, :html => {:class => "form-horizontal"} do |f| %>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <div class="form-group dropdown col-sm-12">
    <%= f.label "Planting Date", :class => 'control-label col-sm-2' %>
    <div class="col-sm-5">
      <%= date_select :planting, :date, :class => 'datepicker' %>
    </div>
  </div>

  <div class="form-group col-sm-12">
    <%= f.label "Planting Size", :class => 'control-label col-sm-2' %>
    <div class="col-sm-2">
      <%= f.radio_button :plot_id, 1, label: "Tray", :checked => true, inline: true %> Tray
      <%= f.radio_button :plot_id, 2, :disabled => true, label: "Bed", :class => 'radio-inline' %> Bed
    </div>
  </div>

  <div class="form-group col-sm-12">
    <%= f.label :crop, :class => 'control-label col-sm-2' %>
    <div class="col-sm-3">
      <%= f.collection_select :crop_id, Crop.order(:name), :id, :name, { include_blank: true }, { :class => 'form-control' } %>
    </div>
  </div>

  <div class="form-group col-sm-12">
    <%= f.label :varietal, :class => 'control-label col-sm-2' %>
    <div class="col-sm-3">
     <%= f.grouped_collection_select :varietal_id, Crop.order(:name), :varietals, :name, :id, :name, { include_blank: true }, { :class => 'form-control' } %>
    </div>
  </div>

  <div class="form-group col-sm-12">
    <%= f.label "Quantity of Seeds", :class => 'control-label col-sm-2' %>
    <div class="col-sm-2">
      <%= f.number_field :quantity, :class => 'form-control', :step => 'any' %>
    </div>
      <div class="col-sm-2">
        <%= f.radio_button :measurement_id, "1", :checked => true, :class => 'radio-inline' %> Ounces
        <%= f.radio_button :measurement_id, "2", :class => 'radio-inline' %> Grams
      </div>
  </div>

  <div class="form-group col-sm-12">
    <%= f.label :notes, :class => 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.text_area :notes, :class => 'form-control'  %>
    </div>
  </div>

  <div class="col-sm-3 col-sm-offset-2">
    <%= f.submit "Submit Record", :class => 'btn btn-default' %>
  </div>

<% end %>