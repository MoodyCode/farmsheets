<%= form_for @crop do |f| %>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <div class="form-group dropdown col-sm-12">
    <%= f.text_field :name, :class => 'form-control' %>
  </div>

  <div class="form-group col-sm-12">
    <%= f.submit "Submit Record", :class => 'btn btn-default' %>
  </div>

<% end %>
