<%= form_for @crop do |f| %>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <div class="form-group dropdown col-sm-12">
    <%= f.label "Crop", :class => 'control-label col-sm-2' %>
    <%= f.text_field :name, :class => 'form-control' %>
  </div>

  <div class="form-group col-sm-12">
    <%= f.fields_for :plantings do |builder| %>
      <%= render 'planting_fields', f: builder %>
    <% end %>
  </div>

  <div class="form-group col-sm-12">
    <%= f.fields_for :varietals do |builder| %>
      <%= render 'varietal_fields', f: builder %>
    <% end %>
  </div>

  <div class="form-group col-sm-12">
    <%= f.submit "Submit Record", :class => 'btn btn-default' %>
  </div>

<% end %>