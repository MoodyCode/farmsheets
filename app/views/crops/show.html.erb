<h1><%= @crop.name.titleize %></h1>
<%= link_to "Edit Crop", edit_crop_path(@crop), :class => "btn btn-default btn-xs" %>
<%= link_to "Back to Crop List", crops_path, :class => "btn btn-default btn-xs" %>

<h3>Variety List for this Crop</h3>
<%= link_to "Add varietal", new_crop_varietal_path(@crop), :class => "btn btn-default btn-xs" %>
<ul class='list-unstyled'>
  <% @varietals.each do |varietal| %>
    <li><%= varietal.name.titleize %> - <%= link_to "Edit", edit_crop_varietal_path(varietal.crop, varietal) %></li>
  <% end %>
</ul>
